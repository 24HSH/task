<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="receiptSyncTask" class="com.hsh24.sync.oms.task.ReceiptSyncTask">
		<property name="receiptSyncService" ref="receiptSyncService" />
	</bean>

	<bean id="receiptSyncJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="receiptSyncTask" />
		</property>
		<property name="targetMethod">
			<value>sync</value>
		</property>
	</bean>

	<bean id="receiptSyncTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="receiptSyncJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/3 * * * ?</value>
		</property>
	</bean>
	
</beans>