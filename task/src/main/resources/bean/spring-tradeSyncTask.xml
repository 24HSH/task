<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
           http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">
	
	<bean id="tradeSyncTask" class="com.hsh24.sync.oms.task.TradeSyncTask">
		<property name="tradeSyncService" ref="omsTradeSyncService" />
	</bean>

	<bean id="tradeSyncJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="tradeSyncTask" />
		</property>
		<property name="targetMethod">
			<value>sync</value>
		</property>
	</bean>

	<bean id="tradeSyncTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="tradeSyncJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/3 * * * ?</value>
		</property>
	</bean>
	
	<bean id="tradeSync2SendJobDetail" class="org.springframework.scheduling.quartz.MethodInvokingJobDetailFactoryBean">
		<property name="targetObject">
			<ref bean="tradeSyncTask" />
		</property>
		<property name="targetMethod">
			<value>sync2Send</value>
		</property>
	</bean>

	<bean id="tradeSync2SendTrigger" class="org.springframework.scheduling.quartz.CronTriggerBean">
		<property name="jobDetail">
			<ref bean="tradeSync2SendJobDetail" />
		</property>
		<property name="cronExpression">
			<value>0 0/5 * * * ?</value>
		</property>
	</bean>
	
</beans>